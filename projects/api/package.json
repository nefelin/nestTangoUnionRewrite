{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "Eric Lindgren",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "yarn clean",
    "clean": "rimraf dist && rimraf generated",
    "build": "yarn generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "start:dev": "NODE_ENV=dev nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typecheck": "tsc --noEmit",
    "generate": "yarn clean && yarn generate:schema && yarn generate:codegen",
    "generate:schema": "NODE_ENV=local GENERATE_ONLY=true nest start",
    "generate:codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.5",
    "@nestjs/common": "^7.5.1",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.5.1",
    "@nestjs/graphql": "^7.10.3",
    "@nestjs/mongoose": "^7.2.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/schedule": "^0.4.1",
    "@nestjs/serve-static": "^2.1.4",
    "@nestjs/terminus": "^8.0.4",
    "apollo-server-express": "^2.22.2",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jest-extended": "^0.11.5",
    "mongoose": "^5.11.9",
    "object-hash": "^2.2.0",
    "passport-local": "^1.0.0",
    "pm2": "^5.1.0",
    "progress": "^2.0.3",
    "ramda": "^0.27.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "yt-search": "^2.9.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/typescript": "^1.22.1",
    "@graphql-codegen/typescript-operations": "^1.18.0",
    "@graphql-codegen/typescript-react-apollo": "^2.2.5",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/ramda": "^0.27.34",
    "@types/supertest": "^2.0.10",
    "@types/yt-search": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "apollo-playground-maker": "^0.2.8",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "astTransformers": {
          "before": [
            "test/gql-plugin.e2e.js"
          ]
        },
        "tsconfig": "tsconfig.build.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*(spec|test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
